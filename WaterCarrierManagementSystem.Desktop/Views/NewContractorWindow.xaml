<Window x:Class="WaterCarrierManagementSystem.Desktop.Views.NewContractorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
        
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WaterCarrierManagementSystem.Desktop.Views"
        mc:Ignorable="d"
        Style="{StaticResource MaterialDesignWindow}"
        WindowStyle="None"
        WindowStartupLocation="CenterOwner"
        AllowsTransparency="True"
        Height="600" 
        Width="400"
        ResizeMode="NoResize"
        Background="Transparent">
    <Border 
        Background="#426DB1"
        BorderThickness="2"
        BorderBrush="LightBlue"
        CornerRadius="30"
        MouseDown="Border_MouseDown">
        <DockPanel>
        <TextBlock
            Text="ADD NEW CURATOR"
            DockPanel.Dock="Top"
            Foreground="White" 
            FontSize="22"
            FontWeight="SemiBold"
            TextAlignment="Center"
            Margin="5 25 0 10">
        </TextBlock>
        <Separator Margin="25" DockPanel.Dock="Top" Height="0.8" Background="#FF6AAFFF"/>

        <StackPanel DockPanel.Dock="Top">
            <TextBox
                Style="{StaticResource MaterialDesignTextBox}"
                md:HintAssist.Hint="  CONTRACTOR NAME"
                Background="#FFFFFF"
                Foreground="DimGray"
                BorderThickness="1"
                Height="35"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="10">
            </TextBox>
        
            <TextBox
                Style="{StaticResource MaterialDesignTextBox}"
                md:HintAssist.Hint="  INN"
                Background="#FFFFFF"
                Foreground="DimGray"
                BorderThickness="1"
                Height="35"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="10">
            </TextBox>

            <!--EMPLOYEE-->
            <ComboBox 
                Style="{StaticResource MaterialDesignComboBox}"
                ItemsSource="{Binding Employees, UpdateSourceTrigger=PropertyChanged}"
                SelectedItem="{Binding SelectedEmployee, UpdateSourceTrigger=PropertyChanged}"
                md:HintAssist.Hint="  Curator"
                Background="#FFFFFF"
                Foreground="DimGray"
                BorderThickness="1"
                Height="35"
                FontSize="16"
                VerticalAlignment="Center"
                Margin="10"
                Padding="5">
            </ComboBox>
            </StackPanel>



        <Button 
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Background="LightPink"
            VerticalAlignment="Bottom"
            DockPanel.Dock="Bottom"
            Margin="15 0"
            md:ButtonAssist.CornerRadius="15">
            <TextBlock
                Text="CLOSE"
                FontSize="18"
                FontWeight="SemiBold">
            </TextBlock>
        </Button>
    
        <Button 
            Style="{StaticResource MaterialDesignRaisedDarkButton}"
            Background="LightBlue"
            VerticalAlignment="Bottom"
            DockPanel.Dock="Bottom"
            Margin="15"
            md:ButtonAssist.CornerRadius="15">
            <TextBlock
                Text="SAVE"
                FontSize="18"
                FontWeight="SemiBold">
            </TextBlock>
        </Button>
    </DockPanel>
    </Border>
</Window>
